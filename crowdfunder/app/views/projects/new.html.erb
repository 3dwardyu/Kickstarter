<h1>Create a project</h1>
<p>Find me in app/views/projects/new.html.erb</p>

<h2>Enter project details</h2>

<%= form_for @project do |f| %>
<div class="field">
<%= f.label :title %>
<%= f.text_field :title %>
</div>
<div class="field">
<%= f.label :description %>
<%= f.text_area :description %>
</div>
<div class="field">
<%= f.label :goal %>
<%= f.number_field :goal %>
</div>
<div class="field">
<%= f.label :image %>
<%= f.text_field :image %>
</div>

<h2>Set your rewards</h2>

<%= f.fields_for :rewards, @reward do |r| %>
  <div class="field">
  <%= r.label :title %>
  <%= r.text_field :title  %>
  </div>
  <div class="field">
  <%= r.label :description %>
  <%= r.text_area :description %>
  </div>
  <div class="field">
  <%= r.label :pledge %>
  <%= r.number_field :pledge %>
  </div>
<% end %>

<%= f.submit "Start Project" %>
<% end %>
