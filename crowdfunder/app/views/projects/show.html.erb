<div class="project-main">
  <h1><%= @project.title %></h1>
    <h4>Our goal: $<%= @project.goal %>.00</h4>
    <h4>Amount Raised: $<%= @project.goal %>.00</h4>
  <div class="project-description">
    <p><%= @project.description %></p>
  </div>
  <%= image_tag @project.image, :class => "show-image" %>
</div>
<div class="rewards">
<% @rewards.each do |reward| %>
  <h2 class="reward-name"><%= link_to reward.title, project_rewards_users_path(@project), :method => :post %></h2>
  <p><%= reward.description %></p>
  <h4>$<%= reward.pledge %>.00</h4>
</div>
<% end %>
