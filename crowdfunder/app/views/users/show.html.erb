
<h1> Hello <%= @user.name %> </h1>
<h3><%= @user.email %></h3>


<h1> Backed projects </h1>
<% @user.rewards.each do |reward| %>
<h3><%= reward.project.title %></h3>
<h3><%= image_tag reward.project.image %></h3>
<h3>$<%= reward.pledge %>.00</h3>
<% end %>

<h1>My Projects</h1>
<% @user.owned_projects.each do |project| %>
<h3><%= project.title %></h3>
<%= image_tag project.image %>


<% end %>
